#usda 1.0
(
    defaultPrim = "rigs"
)

def Xform "rigs" (
    prepend variantSets = "Representation"
)
{
    variantSet "Representation" = {
        "Cache" {
            def Xform "Cache1" (
                append references = @/path/to/your_cache.usd@</Cache1>
            )
            {
            }
        }

        "MayaReference" {
            def MayaReference "MayaReference1" (
                kind = "component"
            )
            {
                asset mayaReference = @/path/to/your_rig.ma@
                string mayaNamespace = "TestRig"
                bool mayaAutoEdit = 0
            }
        }
    }
}